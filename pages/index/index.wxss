/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.goNext {
  position: fixed;
  bottom: 200rpx;
}

.goNext .begin-match {
  border-radius: 50rpx;
  padding: 0 50rpx;
  border: none;
  background-color: #fccd36;
  color: white;
  font-weight: bold;
}